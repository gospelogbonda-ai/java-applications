// Enforcing Privacy with Cryptography
// Program to encrypt a 4-digit number

import java.util.Scanner;

public class Encrypt {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter a 4-digit integer to encrypt: ");
        int number = input.nextInt();

        // Separate each digit
        int d1 = number / 1000;
        int d2 = (number / 100) % 10;
        int d3 = (number / 10) % 10;
        int d4 = number % 10;

        // Encrypt each digit
        d1 = (d1 + 7) % 10;
        d2 = (d2 + 7) % 10;
        d3 = (d3 + 7) % 10;
        d4 = (d4 + 7) % 10;

        // Swap first with third, second with fourth
        int temp = d1;
        d1 = d3;
        d3 = temp;

        temp = d2;
        d2 = d4;
        d4 = temp;

        // Display the encrypted number
        System.out.printf("Encrypted number: %d%d%d%d%n", d1, d2, d3, d4);
    }
}



// Enforcing Privacy with Cryptography
// Program to decrypt a 4-digit number

import java.util.Scanner;

public class Decrypt {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter the 4-digit encrypted integer to decrypt: ");
        int number = input.nextInt();

        // Separate each digit
        int d1 = number / 1000;
        int d2 = (number / 100) % 10;
        int d3 = (number / 10) % 10;
        int d4 = number % 10;

        // Swap back first with third, second with fourth
        int temp = d1;
        d1 = d3;
        d3 = temp;

        temp = d2;
        d2 = d4;
        d4 = temp;

        // Decrypt each digit (reverse of encryption)
        d1 = (d1 + 10 - 7) % 10;
        d2 = (d2 + 10 - 7) % 10;
        d3 = (d3 + 10 - 7) % 10;
        d4 = (d4 + 10 - 7) % 10;

        // Display the decrypted number
        System.out.printf("Decrypted number: %d%d%d%d%n", d1, d2, d3, d4);
    }
}
